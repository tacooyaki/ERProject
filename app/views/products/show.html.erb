<section class="section">
  <div class="container">
    <h1 class="title"><%= @product.name %></h1>

    <div class="columns">
      <div class="column is-half">
        <% if @product.images.attached? %>
          <%= image_tag @product.images.first.variant(resize_to_limit: [500, 500]), class: "image" %>
        <% end %>
      </div>
      <div class="column is-half">
        <div class="content">
          <p class="subtitle"><%= @product.description %></p>
          <p class="title is-4">Price: <%= number_to_currency(@product.price) %></p>
          <%= button_to 'Add to Cart', add_to_cart_path(product_id: @product.id),
                        method: :post, class: "button is-primary" %>
          <br>
          <%= link_to 'Back to Products', products_path, class: "button is-light" %>
        </div>
      </div>
    </div>
  </div>
</section>
