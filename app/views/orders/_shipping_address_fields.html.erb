<div class="form-group">
  <%= f.label :street %>
  <%= f.text_field :street, class: 'form-control', required: true %>
</div>
<div class="form-group">
  <%= f.label :city %>
  <%= f.text_field :city, class: 'form-control', required: true %>
</div>
<div class="form-group">
  <%= f.label :province %>
  <%= f.select :province, options_for_select([
       ['Alberta', 'AB'],
       ['British Columbia', 'BC'],
       ['Manitoba', 'MB'],
       ['New Brunswick', 'NB'],
       ['Newfoundland and Labrador', 'NL'],
       ['Nova Scotia', 'NS'],
       ['Ontario', 'ON'],
       ['Prince Edward Island', 'PE'],
       ['Quebec', 'QC'],
       ['Saskatchewan', 'SK'],
       ['Northwest Territories', 'NT'],
       ['Nunavut', 'NU'],
       ['Yukon', 'YT']
     ]), include_blank: 'Select Province', required: true, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :postal_code %>
  <%= f.text_field :postal_code, class: 'form-control', required: true, placeholder: "Format: A1A 1A1", pattern: "[A-Za-z]\\d[A-Za-z] ?\\d[A-Za-z]\\d" %>
</div>
<div class="form-group">
  <%= f.label :country %>
  <%= f.select :country, options_for_select(['Canada', 'United States']), required: true, class: 'form-control' %>
</div>
